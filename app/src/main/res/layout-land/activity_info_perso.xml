<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.InfoPersos"
    tools:layout_editor_absoluteY="73dp">

    <ScrollView
        android:id="@+id/scrollView2Bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/InfosTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personalInformations"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NameTextView"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="@string/name" />

            <TextView
                android:id="@+id/FirstNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firstName" />

            <TextView
                android:id="@+id/MailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mail" />

            <TextView
                android:id="@+id/PasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password" />

            <TextView
                android:id="@+id/ConfirmPasswordTextView"
                android:layout_width="98dp"
                android:layout_height="49dp"
                android:text="@string/confirmPassword" />

            <TextView
                android:id="@+id/TelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number" />

            <EditText
                android:id="@+id/PasswordInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/ConfirmPasswordInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/PhoneInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/MailInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/NameInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/FirstNameInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:selectAllOnFocus="false" />

            <Button
                android:id="@+id/ValidationInscriptionButton"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/nextTitle"
                tools:layout_editor_absoluteY="285dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>