<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    tools:layout_editor_absoluteY="73dp">

    <Button
        android:id="@+id/InscriptionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="@string/registration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pasEncoreDeCompteTextView" />

    <Button
        android:id="@+id/ConnectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginBottom="28dp"
        android:text="@string/connection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/motDePasseInput" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="55dp"
        android:text="@string/login"
        app:layout_constraintBottom_toBottomOf="@+id/motDePasseTexteView"
        app:layout_constraintEnd_toEndOf="@+id/motDePasseTexteView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/motDePasseTexteView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="@string/password"
        app:layout_constraintBottom_toBottomOf="@+id/motDePasseInput"
        app:layout_constraintEnd_toStartOf="@+id/motDePasseInput" />

    <EditText
        android:id="@+id/loginInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/motDePasseInput"
        app:layout_constraintStart_toStartOf="@+id/motDePasseInput" />

    <EditText
        android:id="@+id/motDePasseInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:layout_marginBottom="81dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/ConnectionButton"
        app:layout_constraintEnd_toStartOf="@+id/pasEncoreDeCompteTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/pasEncoreDeCompteTextView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="67dp"
        android:text="@string/noAccountYet"
        app:layout_constraintBottom_toBottomOf="@+id/InscriptionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/motDePasseInput" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/nconnect"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/loginInput"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>