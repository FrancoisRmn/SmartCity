<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="25dp">

        <TextView
            android:id="@+id/titleFragmentElementDetailRestaurant"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="36dp"
            android:text="@string/titleFragmentElementDetail"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/descriptionElementDetailTitleRestaurant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/scheduleTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descriptionElementDetailTitleRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/descriptionElementDetailTitle"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/descriptionElementDetailRestaurant"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/descriptionElementDetailRestaurant"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="144dp"
            android:text="@string/descriptionElementDetail"
            app:layout_constraintStart_toStartOf="@+id/descriptionElementDetailTitleRestaurant"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scheduleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:text="@string/scheduleTitle"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/localisationTitle"
            app:layout_constraintTop_toBottomOf="@+id/localisation" />

        <TextView
            android:id="@+id/imageTitleRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="164dp"
            android:text="@string/imageTitle"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/scheduleTitle"
            app:layout_constraintTop_toBottomOf="@+id/scheduleTitle" />

        <ImageView
            android:id="@+id/imageRestaurant"
            android:layout_width="186dp"
            android:layout_height="153dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.215"
            app:layout_constraintStart_toStartOf="@+id/imageTitleRestaurant"
            app:layout_constraintTop_toBottomOf="@+id/scheduleRestaurant"
            app:srcCompat="@mipmap/ic_no_images_available" />

        <TextView
            android:id="@+id/localisationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="33dp"
            android:text="Situé à :"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionElementDetailRestaurant" />

        <TextView
            android:id="@+id/localisation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:text="Pas de localisation:"
            app:layout_constraintStart_toStartOf="@+id/localisationTitle"
            app:layout_constraintTop_toBottomOf="@+id/localisationTitle" />

        <TextView
            android:id="@+id/flagshipProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Produit phare :"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imageTitleRestaurant"
            app:layout_constraintTop_toBottomOf="@+id/imageRestaurant" />

        <TextView
            android:id="@+id/flagshipProduct"
            android:layout_width="115dp"
            android:layout_height="64dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="Pas de produit phare pour se commerce"
            app:layout_constraintEnd_toStartOf="@+id/buttonNextImageRestaurant"
            app:layout_constraintTop_toBottomOf="@+id/imageRestaurant" />

        <TextView
            android:id="@+id/contactTitleRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/contactTitle"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/flagshipProductTitle"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toStartOf="@+id/flagshipProductTitle"
            app:layout_constraintTop_toBottomOf="@+id/flagshipProduct" />

        <TextView
            android:id="@+id/emailRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Email : /"
            app:layout_constraintEnd_toEndOf="@+id/flagshipProduct"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="@+id/contactTitleRestaurant"
            app:layout_constraintTop_toBottomOf="@+id/cellphoneRestaurant" />

        <TextView
            android:id="@+id/cellphoneRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Tél mobile : /"
            app:layout_constraintEnd_toEndOf="@+id/flagshipProduct"
            app:layout_constraintHorizontal_bias="0.595"
            app:layout_constraintStart_toStartOf="@+id/contactTitleRestaurant"
            app:layout_constraintTop_toBottomOf="@+id/flagshipProduct" />

        <TextView
            android:id="@+id/phoneRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Tél fixe : /"
            app:layout_constraintEnd_toEndOf="@+id/flagshipProduct"
            app:layout_constraintStart_toStartOf="@+id/contactTitleRestaurant"
            app:layout_constraintTop_toTopOf="@+id/emailRestaurant" />

        <TextView
            android:id="@+id/scheduleRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:text="@string/schedule"
            app:layout_constraintEnd_toEndOf="@+id/titleFragmentElementDetailRestaurant"
            app:layout_constraintStart_toStartOf="@+id/descriptionElementDetailRestaurant"
            app:layout_constraintTop_toBottomOf="@+id/scheduleTitle" />

        <Button
            android:id="@+id/buttonNextImageRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:text="@string/next_image"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageRestaurant"
            app:layout_constraintTop_toTopOf="@+id/imageRestaurant" />

        <TextView
            android:id="@+id/textViewActualiteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualité(s)"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/contactTitleRestaurant"
            app:layout_constraintTop_toTopOf="@+id/phoneRestaurant" />

        <TextView
            android:id="@+id/textViewActualites"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Pas d'actualitées pour le moment."
            app:layout_constraintStart_toEndOf="@+id/textViewActualiteTitle"
            app:layout_constraintTop_toBottomOf="@+id/textViewActualiteTitle" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>
